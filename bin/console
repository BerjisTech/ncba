#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'ncba'

Ncba.configure do |config|
  config.api_key = ENV.fetch('NCBA_API_KEY', 'your_api_key')
  config.username = ENV.fetch('NCBA_USERNAME', 'your_username')
  config.password = ENV.fetch('NCBA_PASSWORD', 'your_password')
  config.environment = :sandbox
end

Ncba::Client.new # available as Ncba::Client.new in IRB

require 'irb'
IRB.start(__FILE__)
